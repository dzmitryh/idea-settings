<templateSet group="other">
  <template name="meth" value="public void $METHOD_NAME() {&#10;}" description="Method Template" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="opt" value="Optional.ofNullable($VAR$).ifPresent($EXPR$)" description="Inserts Optional from &quot;nullable&quot;" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="EXPR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="test" value="@Test&#10;public void test_$METHOD_TO_TEST$_should$ACTION$() {&#10;    // given&#10;    // when&#10;    // then&#10;    $END$&#10;}" description="Create test template method" toReformat="true" toShortenFQNames="true" useStaticImport="true">
    <variable name="METHOD_TO_TEST" expression="camelCase(String)" defaultValue="Meth1" alwaysStopAt="true" />
    <variable name="ACTION" expression="camelCase(String)" defaultValue="ReturnOk" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
</templateSet>